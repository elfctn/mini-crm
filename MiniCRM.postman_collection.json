{
  "info": {
    "_postman_id": "mini-crm-api-collection",
    "name": "Mini CRM API",
    "description": "küçük işletmeler için müşteri ve not yönetimi api'si. jwt ile korumalı endpointler içerir.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "authentication",
      "item": [
        {
          "name": "kullanıcı kaydı (register)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Kullanıcı\",\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "yeni kullanıcı kaydı oluşturur"
          }
        },
        {
          "name": "kullanıcı girişi (login)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@minicrm.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "kullanıcı girişi yapar ve jwt token döner"
          }
        }
      ]
    },
    {
      "name": "customers",
      "item": [
        {
          "name": "müşteri listele (list customers)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/customers",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"]
            },
            "description": "müşteri listesini döner. jwt token gerektirir."
          }
        },
        {
          "name": "müşteri ara (search customers)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/customers?search=ahmet",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"],
              "query": [
                { "key": "search", "value": "ahmet" }
              ]
            },
            "description": "müşteri arama yapar. jwt token gerektirir."
          }
        },
        {
          "name": "müşteri filtrele (filter by tags)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/customers?tags=potansiyel,b2b",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"],
              "query": [
                { "key": "tags", "value": "potansiyel,b2b" }
              ]
            },
            "description": "etiketlere göre müşteri filtreler. jwt token gerektirir."
          }
        },
        {
          "name": "müşteri detayı (get customer)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/customers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "1"]
            },
            "description": "tek müşteri detayını getirir. jwt token gerektirir. id'yi güncel müşteri id'si ile değiştir."
          }
        },
        {
          "name": "müşteri ekle (create customer)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ahmet Yılmaz\",\n  \"email\": \"ahmet@firma.com\",\n  \"phone\": \"+905551234567\",\n  \"tags\": [\"potansiyel\", \"b2b\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/customers",
              "host": ["{{base_url}}"],
              "path": ["api", "customers"]
            },
            "description": "yeni müşteri ekler. jwt token gerektirir."
          }
        },
        {
          "name": "müşteri güncelle (update customer)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Ahmet Yılmaz\",\n  \"email\": \"ahmet@firma.com\",\n  \"phone\": \"+905551234567\",\n  \"tags\": [\"müşteri\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/customers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "1"]
            },
            "description": "müşteri bilgilerini günceller. jwt token gerektirir. id'yi güncel müşteri id'si ile değiştir."
          }
        },
        {
          "name": "müşteri sil (delete customer)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/customers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "customers", "1"]
            },
            "description": "müşteri siler. jwt token gerektirir. id'yi güncel müşteri id'si ile değiştir."
          }
        }
      ]
    },
    {
      "name": "notes",
      "item": [
        {
          "name": "not listele (list notes)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes?customerId=1",
              "host": ["{{base_url}}"],
              "path": ["api", "notes"],
              "query": [
                { "key": "customerId", "value": "1" }
              ]
            },
            "description": "müşterinin notlarını döner. jwt token gerektirir. customerId'yi güncel müşteri id'si ile değiştir."
          }
        },
        {
          "name": "not ekle (add note)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"ilk görüşme yapıldı\",\n  \"customerId\": \"1\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notes",
              "host": ["{{base_url}}"],
              "path": ["api", "notes"]
            },
            "description": "müşteriye not ekler. jwt token gerektirir. customerId'yi güncel müşteri id'si ile değiştir."
          }
        },
        {
          "name": "not güncelle (update note)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"görüşme olumlu geçti\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notes/1",
              "host": ["{{base_url}}"],
              "path": ["api", "notes", "1"]
            },
            "description": "notu günceller. jwt token gerektirir. id'yi güncel not id'si ile değiştir."
          }
        },
        {
          "name": "not sil (delete note)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/notes/1",
              "host": ["{{base_url}}"],
              "path": ["api", "notes", "1"]
            },
            "description": "notu siler. jwt token gerektirir. id'yi güncel not id'si ile değiştir."
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "description": "API base URL - port numarasını güncelleyin (varsayılan: 3000)"
    },
    {
      "key": "token",
      "value": "",
      "description": "JWT token - login endpoint'inden alınan token"
    }
  ]
} 